<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_l10n_mx_edi_complement_cd_res_config_form_inherit" model="ir.ui.view">
        <field name="name">l10n_mx_edi.complement.cd.res.config.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_mx_edi.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr=".//div[@id='l10n_mx_edi_settings']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" title="The parameter to configure the MX Vehicle Complement.">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">MX Vehicles Complement</span>
                        <div class="text-muted">
                            Configure your Vehicle Complement.
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="l10n_mx_edi_complement_type" class="col-md-3 o_light_label"/>
                                <field name="l10n_mx_edi_complement_type"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
